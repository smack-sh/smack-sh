
# App Configuration
NODE_ENV=development
PORT=3000

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Google Gemini API
GEMINI_LIKE_API_KEY=your_gemini_api_key
GEMINI_LIKE_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Default AI Model Configuration
DEFAULT_MODEL=gemini-2.0-flash

# Database Configuration
# NOTE: All database passwords are REQUIRED. The application will fail to start without them.
# Never use default credentials like 'postgres', 'password', '123456', 'admin', 'root'


# Supabase Configuration (optional)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration (optional for advanced features)
# AI Database
AI_DB_USER=postgres
AI_DB_PASSWORD=your_secure_password_here
AI_DB_NAME=smack_ai
AI_DB_HOST=localhost
AI_DB_PORT=5432

# Code Database (using a different port to run both on the same machine)
CODE_DB_USER=postgres
CODE_DB_PASSWORD=your_secure_password_here
CODE_DB_NAME=smack_code
CODE_DB_HOST=localhost
CODE_DB_PORT=5433

# JWT Secret (generate a secure secret)
JWT_SECRET=your_jwt_secret_here

# Session Secret (generate a secure secret)
SESSION_SECRET=your_session_secret_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# REQUIRED SECURITY VARIABLES
# =============================================================================
# The application will fail to start if any of these are not set

# Stripe Configuration (REQUIRED)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# SMTP Configuration (REQUIRED)
SMTP_HOST=smtp.example.com
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here
