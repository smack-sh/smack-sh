{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Smack",
  "version": "1.0.0",
  "identifier": "com.smack.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build/client",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Smack",
        "width": 1280,
        "height": 860,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../public/icon.png"
    ]
  }
}

